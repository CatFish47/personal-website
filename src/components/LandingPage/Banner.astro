---
import DownArrow from "../Icons/DownArrow.astro";
import Socials from "../Socials/Socials.astro"
---

<div id="banner">
  <!-- DVD LOGO THAT CHANGES COLOR WHEN IT BOUNCES :D -->
  <span id="title">Grant <span id="alt-color">Cheng</span></span>
  <Socials />
  <DownArrow width={48} height={48} color="dark" />
</div>
<style>
  :root {
    --banner-gradient: linear-gradient(
      0deg,
      var(--theme-dark-gray),
      var(--theme-dark)
    );
  }

  #banner {
    width: 100vw;
    height: 100vh;
    background: var(--banner-gradient);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  #title {
    font-size: var(--font-size-xl);
    font-weight: bold;
    color: var(--theme-primary);
  }
</style>
