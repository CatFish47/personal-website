---
export interface Props {
  id: string;
}

const { id } = Astro.props as Props;
---

<project-modal id={id} data-id={id} class="modal-background">
  <div class="modal-window">
    <div class="modal-title"><span>Example Project</span></div>
    <div class="modal-body">
      <div class="modal-img"><img src="portrait-square.jpg" /></div>
      <div class="modal-content">Lorem ipsum dolor sit amet.</div>
    </div>
    <div class="modal-footer">
      <button id={`view-${id}`}>View Project</button>
      <button id={`close-${id}`}>Close</button>
    </div>
  </div>
</project-modal>
<script>
  class ProjectModal extends HTMLElement {
    constructor() {
      super();

      const viewProjectButton = this.querySelector(`#view-${this.dataset.id}`);
      viewProjectButton?.addEventListener("click", () => {
        window.open("https://www.google.com", "_blank");
      });

      const closeModalButton = this.querySelector(`#close-${this.dataset.id}`);
      closeModalButton?.addEventListener("click", () => {
        this.style.display = "none";
      });
    }
  }

  customElements.define("project-modal", ProjectModal);
</script>
<style>
  .modal-background {
    background-color: rgba(0, 0, 0, 0.3);
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .modal-window {
    background-color: var(--theme-light);
    border: 1px solid var(--theme-light-gray);
    border-radius: 1rem;
    width: 75vw;
    max-height: 75vh;
    padding: 1rem;
  }

  .modal-title {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 1rem 0;
  }

  .modal-title span {
    font-size: var(--font-size-lg);
    font-weight: bold;
  }

  .modal-body {
    display: grid;
    grid-template-columns: 3fr 7fr;
    column-gap: 1rem;
  }

  .modal-img {
    /* grid-area: i; */
  }

  .modal-img img {
    max-width: 100%;
  }

  .modal-content {
    /* grid-area: c; */
  }

  .modal-footer {
    padding: 1rem 0 0 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 0.3rem;
  }

  .modal-footer button {
    font-size: 0.9rem;
    padding: 0.5rem;
    border: 2px solid var(--theme-light-gray);
    background-color: var(--theme-light);
    border-radius: 5px;
  }

  .modal-footer button:hover {
    border: 2px solid var(--theme-secondary);
  }
</style>
